{
  "name": "precoil",
  "version": "0.0.3",
  "description": "A minimal state management library for React. Hmm, it's like Recoil.",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "__tests__"
  },
  "scripts": {
    "clean": "rimraf .cache dist",
    "dts": "tsc -d --emitDeclarationOnly --declarationDir .cache",
    "bundle": "rollup -c",
    "build": "yarn clean && yarn dts && yarn bundle",
    "lint": "ts-standardx",
    "lint:fix": "ts-standardx --fix",
    "test": "yarn lint && yarn build && jest --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exuanbo/precoil.git"
  },
  "keywords": [
    "react",
    "preact",
    "state",
    "state management",
    "hook",
    "hooks",
    "react hooks"
  ],
  "author": "exuanbo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exuanbo/precoil/issues"
  },
  "homepage": "https://github.com/exuanbo/precoil#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "6.1.0",
    "@types/jest": "26.0.15",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "jest": "26.6.3",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "rollup": "2.33.3",
    "rollup-plugin-dts": "2.0.0",
    "ts-jest": "26.4.4",
    "ts-standardx": "0.5.1",
    "tslib": "2.0.3",
    "typescript": "4.1.2"
  }
}
